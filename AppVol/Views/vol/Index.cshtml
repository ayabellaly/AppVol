@model IEnumerable<vol>
@{
    ViewData["Title"] = "Index";
}





<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> Flight list </h2>
        </div>
        <div class=" text-end col-6">
            <a asp-controller="vol" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-window-plus"></i> &nbsp; Create flights
            </a>
        </div>
    </div>
</div>



<table class=" table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Ville de départ
            </th>
            <th>
                Ville d'arrivé
            </th>
            <th>
                 Periode
            </th>
            <th>
                ClassEconomique
            </th>
            


        </tr>
    </thead>




    <tbody> @foreach (var obj in Model)
           {
            <tr>
                <td width="50%">
                    @obj.villeDepart
                </td>
                <td width="30%">
                    @obj.villeArrive
                </td>
                <td width="30%">
                    @obj.periodeDate
                </td>
                <td width="30%">
                    @obj.ClassEconomique
                </td>


                <td>
                    <div  class="w-75 btn-group" role="group">

                    <a asp-controller="vol" asp-action="Edit"  asp-route-id="@obj.id"   class="btn btn-success mx-2">
                        
                     <i class="bi bi-pencil-square"></i>  
                    </a>


                        <a asp-controller="vol" asp-action="delete" asp-route-id="@obj.id" class="btn btn-primary mx-2">

                            <i class="bi bi-trash-fill"></i> 
                        </a>

                    </div>
                </td>


            </tr>
        }
    </tbody>



</table>